<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>
<table>
    <tr>
        <th>Artist</th>
        <th>Genre</th>
    </tr>
    <tr>
        <td><a href='/artists/<%= @song.artist.slug %>'><%= @song.artist.name %></a></td>
        <td>
        <% @song.genres.each do |genre| %>
            <a href='/genres/<%= genre.slug %>'><%= genre.name %></a>
        <% end %>
        </td>
    </tr>
</table>
<p/>
<a href='/songs/<%= @song.slug %>/edit'><input type='button' value='Update Song Information'></a>