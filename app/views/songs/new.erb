<form action="/songs" method="POST">
  <label for="Name">Name: </label>
  <input type="text" name="song[name]" id="Name"><br />
  <label for='Artist Name'>Artist: </label>
  <input type="text" name="artist_name" id="Artist Name"><br />
  <label>Genre: </label>
  <% @genres.each do |genre| %> 
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input>
  <% end %><br />
  <input type="submit" value="Create New Song">
</form>